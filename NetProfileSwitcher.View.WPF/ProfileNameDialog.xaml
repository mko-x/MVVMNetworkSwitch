<Window x:Class="NetProfileSwitcher.View.WPF.ProfileNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uic="clr-namespace:NetProfileSwitcher.UIControls;assembly=NetProfileSwitcher.UIControls"
        Title="ProfileNameDialog" Height="100" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <uic:DarkerTextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                           Name="tbProfileName"
                           KeyUp="tbProfileName_KeyUp"/>
        <Button Grid.Row="1" Grid.Column="1" Content="OK" Click="Button_Ok_Click"/>
    </Grid>
</Window>
